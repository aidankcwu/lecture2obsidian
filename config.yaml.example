# lecture-to-obsidian configuration
# Copy this file to config.yaml and fill in your values, or run:
#   python -m app.cli init
# config.yaml is gitignored so your vault path stays private.

vault:
  # Absolute path to your Obsidian vault root
  path: "/path/to/your/obsidian/vault"

  # Folder inside the vault where summary notes are written
  # Created automatically if it doesn't exist
  inbox_folder: "1 - Inbox"

  # Folder inside the vault where raw transcripts are written
  source_folder: "2 - Source Materials/Lectures"

summarization:
  # OpenAI model used for summarization
  model: "gpt-4o-mini"

  # Approximate maximum words per section in the generated summary
  max_section_length: 500

note_template:
  # Default status tag on new summary notes
  status: "#review"

  # How course tags are formatted: "wikilink" → [[CS301]], "hashtag" → #CS301
  tag_style: "wikilink"

transcription:
  # "local"  — use faster-whisper (no API calls, runs on-device, ~150 MB model download on first run)
  # "api"    — use OpenAI Whisper API (requires OPENAI_API_KEY, billed per minute)
  backend: "local"

  # faster-whisper model to use (only relevant when backend: local)
  # Options: tiny.en, base.en, small.en, medium.en (larger = more accurate, slower)
  local_model: "base.en"

recording:
  # Where to move the WAV file after successful processing
  # Omit this key entirely to delete the WAV after processing
  archive_dir: "~/recordings"

# Schedule-based course auto-detection for the `toggle` command.
# When `toggle` is called without --course, the current day/time is checked
# against these entries (with a 15-minute buffer on either side).
# Falls back to default_course if no match is found.
schedule:
  Monday:
    - time: "09:00-10:15"
      course: "CS 301"
      title_prefix: "Data Structures"
    - time: "14:00-15:15"
      course: "MATH 240"
      title_prefix: "Linear Algebra"
  Tuesday:
    - time: "11:00-12:15"
      course: "CS 350"
      title_prefix: "Operating Systems"
  # Add more days as needed...

default_course: "Lecture"
